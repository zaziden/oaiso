<div class='chat-room-form'>
  <h1>新規ゲスト登録</h1>
  <%=form_with model: @gest, local: true do |f|%>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :ゲスト名, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :gest_name, class: 'chat__room_name chat-room-form__input', placeholder: 'ゲスト名を入力してください'%>
      </div>
    </div>
    <div class='chat-room-form__field'>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit class: 'chat-room-form__action-btn'%>
        <%= link_to "戻る", root_path(current_user) %>
      </div>
    </div>
  <% end %>
</div>
